        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartupWindow" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <Button Name="btnMainData" Margin="10" Click="btnMainData_Click" >Hoofd Data</Button>
            <Button Name="btnEnterPlayerData" Margin="10" Click="btnEnterPlayerData_Click">Spelers Data</Button>
