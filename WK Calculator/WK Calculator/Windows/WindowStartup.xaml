<Window x:Class="WK_Calculator.WindowStartup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WK Points Calculator" Height="300" Width="300" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <Button Name="btnMainData" Margin="10" Click="btnMainData_Click" >Hoofd Data</Button>
            <Button Name="btnEnterPlayerData" Margin="10" Click="btnEnterPlayerData_Click">Spelers Data</Button>
            <Button Name="btnShowPoints" Margin="10" Click="btnShowPoints_Click" >Toon Punten</Button>
            <Button Name="btnMailXLS" Margin="10" Click="btnMailXLS_Click">Verstuur Excels</Button>
        </StackPanel>      
    </Grid>
</Window>
