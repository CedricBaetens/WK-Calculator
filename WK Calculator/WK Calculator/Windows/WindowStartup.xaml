<Window x:Class="WK_Calculator.WindowStartup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WK Points Calculator" Height="600" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Image Source="../Images/logo.png" Grid.ColumnSpan="4"></Image>
        
        <Button Grid.Row="1" Grid.Column="0" Name="btnMainData" Margin="10" Click="btnMainData_Click" >Hoofd Data</Button>
        <Button Grid.Row="1" Grid.Column="1" Name="btnEnterPlayerData" Margin="10" Click="btnEnterPlayerData_Click">Spelers Data</Button>
        <Button Grid.Row="1" Grid.Column="2" Name="btnShowPoints" Margin="10" Click="btnShowPoints_Click" >Toon Punten</Button>
        <Button Grid.Row="1" Grid.Column="3" Name="btnMailXLS" Margin="10" Click="btnMailXLS_Click">Verstuur Excels</Button>     
    </Grid>
</Window>
